{
  "name": "git-contributor-stats",
  "version": "2.0.0",
  "private": false,
  "description": "CLI to compute contributor and repository statistics from a Git repository (commits, lines added/deleted, frequency, heatmap, bus-factor), with filters and multiple output formats.",
  "keywords": [
    "git",
    "analytics",
    "contributors",
    "statistics",
    "cli",
    "reports",
    "charts",
    "heatmap",
    "bus-factor",
    "repository-analysis"
  ],
  "homepage": "https://github.com/vikkrantxx7/git-contributor-stats#readme",
  "bugs": {
    "url": "https://github.com/vikkrantxx7/git-contributor-stats/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikkrantxx7/git-contributor-stats.git"
  },
  "license": "MIT",
  "author": {
    "name": "Vikrant Sharma",
    "email": "vikkrant.xx7@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "./stats": {
      "types": "./dist/features/stats.d.ts",
      "import": "./dist/features/stats.mjs"
    },
    "./charts": {
      "types": "./dist/features/charts.d.ts",
      "import": "./dist/features/charts.mjs"
    },
    "./reports": {
      "types": "./dist/features/reports.d.ts",
      "import": "./dist/features/reports.mjs"
    },
    "./output": {
      "types": "./dist/features/output.d.ts",
      "import": "./dist/features/output.mjs"
    },
    "./workflow": {
      "types": "./dist/features/workflow.d.ts",
      "import": "./dist/features/workflow.mjs"
    },
    "./cli": {
      "types": "./dist/cli.d.ts",
      "import": "./dist/cli.mjs"
    }
  },
  "bin": {
    "git-contributor-stats": "./dist/cli.mjs"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "SECURITY.md"
  ],
  "scripts": {
    "biome": "biome lint .",
    "biome:fix": "biome lint . --fix",
    "build": "vite build && npm run build:types",
    "build:types": "tsc -p tsconfig.json",
    "changeset": "changeset",
    "changeset:status": "changeset status --verbose",
    "commitlint": "commitlint --edit",
    "coverage": "vitest run --coverage",
    "format": "biome check . --linter-enabled=false",
    "format:fix": "biome check . --fix --linter-enabled=false",
    "help": "node src/cli/entry.ts --help",
    "lint": "node scripts/lint.js",
    "lint:fix": "node scripts/lintFix.js",
    "prepare": "lefthook install",
    "prepublishOnly": "npm run test && npm run build",
    "release": "npm run build && changeset publish --provenance",
    "report": "node src/cli/entry.ts --out-dir reports --md reports/report.md --html reports/report.html --no-count-lines --charts",
    "sort": "sort-package-json",
    "start": "node src/cli/entry.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "typeCheck": "tsc --noEmit",
    "upgrade": "ncu --interactive --format group --cooldown 5",
    "version": "changeset version && npm install --package-lock-only"
  },
  "dependencies": {
    "chart.js": "4.5.1",
    "chartjs-node-canvas": "5.0.0",
    "commander": "14.0.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@changesets/cli": "2.29.7",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@types/node": "24.9.1",
    "@vitest/coverage-v8": "3.2.4",
    "concurrently": "9.2.1",
    "execa": "9.6.0",
    "lefthook": "2.0.2",
    "npm-check-updates": "19.1.2",
    "sort-package-json": "3.4.0",
    "typescript": "5.9.3",
    "vite": "7.1.12",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
