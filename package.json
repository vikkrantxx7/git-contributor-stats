{
  "name": "git-contributor-stats",
  "version": "1.0.0",
  "private": false,
  "description": "CLI to compute contributor and repository statistics from a Git repository (commits, lines added/deleted, frequency, heatmap, bus-factor), with filters and multiple output formats.",
  "keywords": [
    "git",
    "analytics",
    "contributors",
    "statistics",
    "cli",
    "reports",
    "charts",
    "heatmap",
    "bus-factor",
    "repository-analysis"
  ],
  "homepage": "https://github.com/vikkrantxx7/git-contributor-stats#readme",
  "bugs": {
    "url": "https://github.com/vikkrantxx7/git-contributor-stats/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikkrantxx7/git-contributor-stats.git"
  },
  "license": "MIT",
  "author": {
    "name": "Vikrant Sharma",
    "email": "vikkrant.xx7@gmail.com"
  },
  "type": "module",
  "exports": {
    ".": "./dist/index.mjs",
    "./cli": "./dist/cli.mjs",
    "./package.json": "./package.json"
  },
  "module": "dist/index.mjs",
  "types": "dist/api.d.ts",
  "bin": {
    "git-contributor-stats": "./dist/cli.mjs"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "biome": "biome lint .",
    "biome:fix": "biome lint . --fix",
    "build": "vite build && npm run build:types",
    "build:types": "tsc -p tsconfig.json",
    "coverage": "vitest run --coverage",
    "format": "biome check . --linter-enabled=false",
    "format:fix": "biome check . --fix --linter-enabled=false",
    "help": "node ./dist/cli.mjs --help",
    "lint": "node scripts/lint.js",
    "lint:fix": "node scripts/lintFix.js",
    "prepublishOnly": "npm run test && npm run build",
    "report": "node ./dist/cli.mjs --out-dir reports --md reports/report.md --html reports/report.html --no-count-lines --charts",
    "smoke": "node scripts/smoke.js",
    "sort": "sort-package-json",
    "start": "node ./dist/cli.mjs",
    "test": "vitest run",
    "test:watch": "vitest",
    "typeCheck": "tsc --noEmit",
    "upgrade": "ncu --interactive --format group --cooldown 5"
  },
  "dependencies": {
    "chart.js": "4.5.1",
    "chartjs-node-canvas": "5.0.0",
    "commander": "14.0.1",
    "string-similarity-js": "2.1.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.6",
    "@types/node": "24.6.2",
    "@vitest/coverage-v8": "3.2.4",
    "concurrently": "9.2.1",
    "execa": "9.6.0",
    "npm-check-updates": "19.1.1",
    "sort-package-json": "3.4.0",
    "typescript": "5.9.3",
    "vite": "7.1.7",
    "vitest": "3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
