{
  "name": "git-contributor-stats",
  "version": "1.0.0",
  "description": "CLI to compute contributor and repository statistics from a Git repository (commits, lines added/deleted, frequency, heatmap, bus-factor), with filters and multiple output formats.",
  "keywords": [
    "git",
    "analytics",
    "contributors",
    "statistics",
    "cli",
    "reports",
    "charts",
    "heatmap",
    "bus-factor",
    "repository-analysis"
  ],
  "author": {
    "name": "Vikrant Sharma",
    "email": "vikkrant.xx7@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vikkrantxx7/git-contributor-stats.git"
  },
  "bugs": {
    "url": "https://github.com/vikkrantxx7/git-contributor-stats/issues"
  },
  "homepage": "https://github.com/vikkrantxx7/git-contributor-stats#readme",
  "module": "dist/index.mjs",
  "exports": {
    ".": "./dist/index.mjs",
    "./package.json": "./package.json"
  },
  "types": "dist/api.d.ts",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "bin": {
    "git-contributor-stats": "cli.js"
  },
  "scripts": {
    "start": "node cli.js",
    "help": "node cli.js --help",
    "report": "node cli.js --out-dir reports --md reports/report.md --html reports/report.html --no-count-lines --charts",
    "smoke": "node scripts/smoke.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "build:types": "tsc -p tsconfig.json",
    "build": "vite build && npm run build:types",
    "prepublishOnly": "npm run test && npm run build"
  },
  "private": false,
  "dependencies": {
    "chart.js": "4.5.0",
    "chartjs-node-canvas": "5.0.0",
    "commander": "14.0.1",
    "string-similarity-js": "2.1.4"
  },
  "type": "module",
  "devDependencies": {
    "vite": "7.1.7",
    "vitest": "3.2.4",
    "execa": "9.6.0",
    "typescript": "5.9.3",
    "@types/node": "24.6.2"
  }
}
